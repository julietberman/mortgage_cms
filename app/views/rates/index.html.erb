<div class="top">
  <h1>Daily Deals</h1>
  <button class="add"><%= link_to "Add New Deal (+)", new_rate_path %></button>
</div>
<div class="holder">
  <% @rates.each do |rate| %>
    <div class="box">
      <h2><%= rate.loan_type %></h2>
      <p><%= rate.length%></p>
      <p><%= rate.apr%></p>
      <p><%= rate.rate%></p>
      <p><%= rate.description%></p>
      <div>
        <button><%= link_to 'Remove', rate_path(rate),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></button>
        <button><%= link_to 'Edit', edit_rate_url(rate)%></button>
      </div>
    </div>
  <% end %>
</div>
